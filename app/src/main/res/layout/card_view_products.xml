<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_tech"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangulo_borde_rojo"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/imagen_producto" />

        <TextView
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image"
            android:text="@string/producto"
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product"
            android:layout_toEndOf="@+id/image"
            android:text="@string/precio"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- <Button
            android:id="@+id/btn_products_detail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/price"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/image"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/ver_detalle"/> -->

        <Button
            android:id="@+id/btn_products_add"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/image"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:icon="@drawable/ic_shop" />

        <Button
            android:id="@+id/btn_products_delete"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/image"
            android:backgroundTint="@color/red"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:icon="@drawable/ic_baseline_delete_24"
            app:iconTint="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>